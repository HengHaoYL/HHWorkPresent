<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.henghao.hhworkpresent"
    android:versionCode="1"
    android:versionName="1.0.0">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21"/>

    <!-- 判断是否联网操作权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 联网操作权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 程序退出操作权限 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <!-- 百度地图 -->
    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <!-- 百度API所需权限 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <!-- 检查网络问题 -->
    <service android:name=".service.ReConnectService" />
    <!-- 推送 -->
    <service android:name=".service.PushParseJsonService" />

    <application
        android:name=".FMApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:theme">
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="QmHuTkcoxCpZ5EMHszqqu714eInH99qV" />

        <!-- 百度地图所需的service -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.baidu.location.service_v2.2" ></action>
            </intent-filter>
        </service>

        <!-- 主页 -->
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 办公任务界面 -->
        <activity
            android:name=".activity.BangGongRWActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />
        <!-- 车辆审批界面 -->
        <activity
            android:name=".activity.CheliangSPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />
        <!-- 邮箱界面 -->
        <activity
            android:name=".activity.EmailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />

        <!-- 通知公告界面 -->
        <activity
            android:name=".activity.GongGaoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />

        <!-- 考勤界面 -->
        <activity
            android:name=".activity.KaoQingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />

        <!-- 外勤签到界面 -->
       <activity
            android:name=".activity.WaiQingQDActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />

        <!-- 签到提交界面 -->
        <activity
            android:name=".activity.QiandaoSubmitActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />

        <!-- 行政执法界面 -->
        <activity
            android:name=".activity.XingZhenZFActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />

        <!-- 行政审批界面 -->
        <activity
            android:name=".activity.XingZhneSPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Activity.Theme" />

    </application>

</manifest>