<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="会议主题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/et_meeting_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="10dp"
                android:maxLength="22"
                android:textSize="18dp"
                android:hint="填写开会主题"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="开始时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_meeting_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:maxLength="22"
                android:drawableRight="@drawable/item_point_right"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/linear_meeting_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="预估时长"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_meeting_duration"
                android:text="30分钟"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/item_point_right"
                android:layout_margin="20dp"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/linear_choose_meet_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="选择参会人员"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/tv_meeting_people_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableRight="@drawable/item_point_right"
                android:textSize="18dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/tv_join_meeting_people"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="200dp"
            android:textSize="18dp">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_meeting_ok"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bluecircleframe"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_big"
        android:paddingLeft="@dimen/padding_vertical_a"
        android:paddingRight="@dimen/padding_vertical_a"
        android:paddingTop="@dimen/padding_big"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/gj_d" />
</RelativeLayout>