<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:text="@string/meetingTheme"/>
                <TextView
                    android:id="@+id/tv_meeting_upload_detail_theme"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/edittext_bg_border"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:text="@string/startTime"/>
                <TextView
                    android:id="@+id/tv_meeting_upload_detail_start_time"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edittext_bg_border"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:text="@string/meetingDuration2"/>
                <TextView
                    android:id="@+id/tv_meeting_upload_detail_duration"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/edittext_bg_border"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:text="@string/meetingPlace"/>
                <TextView
                    android:id="@+id/tv_meeting_upload_detail_place"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/edittext_bg_border"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:text="@string/approach_SignIn"/>
                <TextView
                    android:id="@+id/tv_meeting_upload_detail_start_qiandao"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/edittext_bg_border"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:text="@string/exit_SignIn"/>
                <TextView
                    android:id="@+id/tv_meeting_upload_detail_end_qiandao"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/edittext_bg_border"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:text="@string/meetingSummary"/>
                <TextView
                    android:id="@+id/tv_meeting_upload_detail_summary"
                    android:layout_width="230dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:background="@drawable/edittext_bg_border"
                    android:textSize="16sp"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/meeting_site_picture"/>

            <GridView
                android:id="@+id/upload_meeting_picture_gridview"
                android:background="@drawable/edittext_bg_border"
                android:layout_width="315dp"
                android:layout_height="170dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_margin="10dp"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:numColumns="3"
                android:columnWidth="90dp"
                android:stretchMode="columnWidth"
                android:gravity="center" >
            </GridView>

        </LinearLayout>

</ScrollView>