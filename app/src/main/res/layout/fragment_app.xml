<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="效能提升系统"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/cheliangyuding"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="1dip"
                android:background="@color/line"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="安全服务"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/anquanfuwu"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>

                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/shejishencha"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>

                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/chushen"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>

                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/fushen"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/banfa"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="1dip"
                android:background="@color/line"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="办公任务管理"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/zhidingjihua"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>

                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/fabugonggao"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>

                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/renwupaifa"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>

                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/lingdaoquxiang"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="1dip"
                android:background="@color/line"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="三重一大事项"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.henghao.hhworkpresent.views.MyImageTextButton
                    android:id="@+id/sanzhongyida"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="1dip"
                android:background="@color/line"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>