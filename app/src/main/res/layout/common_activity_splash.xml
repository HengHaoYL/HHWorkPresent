<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="visible" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="@dimen/padding_normal"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageview_logo"
                android:layout_width="@dimen/fitment_smallmark"
                android:layout_height="@dimen/fitment_smallmark"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_gyajj_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/imageview_logo"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="贵阳市安监数据铁笼"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/gj_g" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:textColor="@color/text_color_b"
                    android:visibility="gone"
                    android:text="贵州恒昊软件科技有限公司 "
                    android:textSize="@dimen/gj_b" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_centerInParent="true"
            android:text="Copyright © 2017-2018 HH.All rights reserved"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>