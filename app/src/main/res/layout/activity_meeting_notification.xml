<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="24dp"
        android:text="@string/meeting_notification"/>

    <TextView
        android:id="@+id/tv_meeting_notification"
        android:layout_below="@id/tv_notification_title"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/linear_notification"
        android:layout_below="@id/tv_meeting_notification"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_meeting_faqiren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_btn"
        android:layout_below="@id/linear_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_notification_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/text_color_green"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="@string/meeting_signIn"/>
        <Button
            android:id="@+id/btn_notification_not_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@color/register_hint_select"
            android:textSize="18dp"
            android:text="@string/replace_people"/>
    </LinearLayout>

</RelativeLayout>