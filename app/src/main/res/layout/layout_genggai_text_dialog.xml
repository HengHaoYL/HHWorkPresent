<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_order_change_text"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_bluecircleframe"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="责令整改指令书"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_force_measures_text"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_bluecircleframe"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="强制措施决定书"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_site_measures_text"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_bluecircleframe"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="现场处置决定书"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>