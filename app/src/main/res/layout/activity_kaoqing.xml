<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/kaoqing_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/kaoqing_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/item_selfhead"/>

        <TextView
            android:id="@+id/kaoqing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="#2C1D07"
            android:text="张  剑"/>

        <TextView
            android:id="@+id/tv_search_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2C1D07"
            android:layout_marginLeft="120dp"
            android:background="@drawable/outside_stroke"
            android:drawablePadding="@dimen/padding_normal"
            android:drawableRight="@drawable/item_point_down"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_big"
            android:paddingRight="@dimen/padding_big"
            android:paddingTop="@dimen/padding_small"
            android:text="2017年3月"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kaoqing_linear2"
        android:layout_below="@id/kaoqing_linear1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/item_yunzhang"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#2C1D07"
                android:text="本月平均工时:"/>
            <TextView
                android:id="@+id/kaoqing_avg_time"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2C1D07"
                android:layout_gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#2C1D07"
                android:text="快去打卡提升工时"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:text="查看打卡月历"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1296db"
                android:layout_marginLeft="50dp"
                android:text="统计说明"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kaoqing_linear3"
        android:layout_below="@id/kaoqing_linear2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/kaoqing_image1"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/item_tiao_bule"/>
                <TextView
                    android:id="@+id/kaoqing_text1"
                    android:layout_toRightOf="@id/kaoqing_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="#2C1D07"
                    android:text="出勤天数"/>
                <TextView
                    android:layout_toRightOf="@id/kaoqing_text1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textColor="#2C1D07"
                    android:layout_centerVertical="true"
                    android:text="0天"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/kaoqing_image2"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/item_tiao_bule"/>
            <TextView
                android:id="@+id/kaoqing_text2"
                android:layout_toRightOf="@id/kaoqing_image2"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textColor="#2C1D07"
                android:text="正常打卡"/>
            <TextView
                android:layout_toRightOf="@id/kaoqing_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textColor="#2C1D07"
                android:text="0天"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/kaoqing_image3"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/item_tiao_yellow"/>
                <TextView
                    android:id="@+id/kaoqing_text3"
                    android:layout_toRightOf="@id/kaoqing_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="#2C1D07"
                    android:text="外勤打卡"/>
                <TextView
                    android:layout_toRightOf="@id/kaoqing_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:textColor="#2C1D07"
                    android:text="0次"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/kaoqing_image4"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/item_tiao_yellow"/>
            <TextView
                android:id="@+id/kaoqing_text4"
                android:layout_toRightOf="@id/kaoqing_image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textColor="#2C1D07"
                android:layout_gravity="center"
                android:text="早退"/>
            <TextView
                android:layout_toRightOf="@id/kaoqing_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="58dp"
                android:textColor="#2C1D07"
                android:layout_gravity="center"
                android:text="0次"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/kaoqing_image5"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/item_tiao_yellow"/>
            <TextView
                android:id="@+id/kaoqing_text5"
                android:layout_toRightOf="@id/kaoqing_image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="#2C1D07"
                android:text="缺卡"/>
            <TextView
                android:layout_toRightOf="@id/kaoqing_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_centerVertical="true"
                android:textColor="#2C1D07"
                android:text="0次"/>
            </RelativeLayout>
            <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/kaoqing_image6"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/item_tiao_yellow"/>
            <TextView
                android:id="@+id/kaoqing_text6"
                android:layout_toRightOf="@id/kaoqing_image6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textColor="#2C1D07"
                android:text="迟到"/>
            <TextView
                android:layout_toRightOf="@id/kaoqing_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_centerVertical="true"
                android:textColor="#2C1D07"
                android:text="0次"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/kaoqing_image7"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/item_tiao_yellow"/>
            <TextView
                android:id="@+id/kaoqing_text7"
                android:layout_toRightOf="@id/kaoqing_image7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="#2C1D07"
                android:text="旷工"/>
            <TextView
                android:layout_toRightOf="@id/kaoqing_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_centerVertical="true"
                android:textColor="#2C1D07"
                android:text="0天"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/kaoqing_image8"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/item_tiao_yellow"/>
            <TextView
                android:id="@+id/kaoqing_text8"
                android:layout_toRightOf="@id/kaoqing_image8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textColor="#2C1D07"
                android:text="休息"/>
            <TextView
                android:layout_toRightOf="@id/kaoqing_text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_centerVertical="true"
                android:textColor="#2C1D07"
                android:text="0天"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/kaoqing_linear4"
        android:layout_below="@id/kaoqing_linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/item_tiao_yellow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:textColor="#2C1D07"
                android:text="出差"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:textColor="#2C1D07"
                android:layout_gravity="center"
                android:text="0天0小时"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/item_tiao_yellow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:textColor="#2C1D07"
                android:text="外出"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_gravity="center"
                android:textColor="#2C1D07"
                android:text="0天0小时"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/item_tiao_yellow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:textColor="#2C1D07"
                android:text="请假"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:textColor="#2C1D07"
                android:layout_gravity="center"
                android:text="0天0小时"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabs_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e3e3e3" />

        <RadioGroup
            android:id="@+id/tabs_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_normal">

            <RadioButton
                android:id="@+id/xm_project"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="@dimen/padding_small"
                android:padding="@dimen/padding_normal"
                android:drawableTop="@drawable/selector_kaoqing"
                android:singleLine="true"
                android:gravity="center"
                android:text="考勤"
                android:textColor="@drawable/tab_selector"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/xm_my"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:drawablePadding="@dimen/padding_small"
                android:drawableTop="@drawable/selector_foot"
                android:padding="@dimen/padding_normal"
                android:singleLine="true"
                android:text="足迹"
                android:textColor="@drawable/tab_selector"
                android:textSize="15dp" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
