<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_ziliao_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_name"
                android:textSize="@dimen/gj_f" />

            <TextView
                android:id="@+id/tongxunlu_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_sex"
                android:textSize="@dimen/gj_f" />

            <TextView
                android:id="@+id/tongxunlu_et_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_birthday"
                android:textSize="@dimen/gj_f" />

            <TextView
                android:id="@+id/tongxunlu_et_birth_DATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableRight="@drawable/icon_datatime"
                android:hint="@string/tv_choose_date"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_law_no"
                android:textSize="@dimen/gj_f" />

            <EditText
                android:id="@+id/tongxunlu_et_emp_NUM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/tv_please_enter"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_telephone"
                android:textSize="@dimen/gj_f" />

            <EditText
                android:id="@+id/tongxunlu_et_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/tv_please_enter"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_phoneNumber"
                android:textSize="@dimen/gj_f" />

            <EditText
                android:id="@+id/tongxunlu_et_cellphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/tv_please_enter"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_address"
                android:textSize="@dimen/gj_f" />

            <EditText
                android:id="@+id/tongxunlu_et_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/tv_please_enter"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_address"
                android:textSize="@dimen/gj_f" />

            <EditText
                android:id="@+id/tongxunlu_et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/tv_please_enter"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_dept_NAME"
                android:textSize="@dimen/gj_f" />

            <TextView
                android:id="@+id/tongxunlu_et_dept_NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/padding_big"
                android:drawableRight="@drawable/item_point_right"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="@string/tv_work_DESC"
                android:textSize="@dimen/gj_f" />

            <EditText
                android:id="@+id/tongxunlu_et_work_DESC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/tv_please_enter"
                android:padding="@dimen/padding_big"
                android:textColor="@color/text_color_c"
                android:textColorHint="@color/line"
                android:textSize="@dimen/gj_f" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="@color/result_minor_text" />

    </LinearLayout>

</ScrollView>


