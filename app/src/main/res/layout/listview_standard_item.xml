<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dip"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:background="#11C2EE">
            <TextView
                android:id="@+id/tv_standard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:text="安全生产相关资质"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_standard_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:text="是否有安全生产相关资质证照，是否超期。如不需取得先关资质，请注明" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#7D6F91"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/standard_radioGroup"
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <RadioButton
                    android:id="@+id/radio_conform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="符合" />
                <RadioButton
                    android:id="@+id/radio_not_conform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text="有隐患"/>
            </RadioGroup>

            <TextView
                android:id="@+id/tv_add_yinhuan"
                android:layout_below="@id/standard_radioGroup"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#11C2EE"
                android:textSize="15dp"
                android:text="添加"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>